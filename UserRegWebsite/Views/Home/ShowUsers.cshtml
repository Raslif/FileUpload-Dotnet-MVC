@model IEnumerable<Domain.Models.Query.UserDetailsModel>

@{
    ViewBag.Title = "User Details";
}

<h2>User Details</h2>

<p>
    @Html.ActionLink("Create New", "Index", "Home")
</p>
<table class="table">
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Date Of Birth</th>
        <th>Profile Picture</th>
        <th>Document</th>
    </tr>
    @if (Model == null)
    {
        <tr colspan="5">
            <td>No Details Found</td>
        </tr>
    }
    else
    {
        foreach (var item in Model)
        {
            <tr>
                <td>@item.FName</td>
                <td>@item.LName</td>
                <td>@item.DOB</td>
                <td><img src="@item.PhotoPath" style="width: 150px; height: 150px" /></td>
                <td>
                    @Html.ActionLink(item.DocName, "GetPdf", "Home", new { documentPath = item.DocPath, fileName = item.DocName }, new { target = "_blank" })
                </td>
            </tr>
        }
    }

</table>
